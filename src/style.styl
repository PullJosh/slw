@import 'normalize.css'

body {
  background black
  color white
}

canvas {
  width 256px
  height 256px

  image-rendering pixelated
  outline none

  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)

  opacity 0.5
  cursor pointer

  &:focus {
    opacity 1
    cursor none
  }
}
